<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
	android:background="@drawable/layer_card_bg" >
    
    <com.parse.ParseImageView
        android:id="@+id/ivDonorHomeUserPhoto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tvDonorHomeUserDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivDonorHomeUserPhoto"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ivDonorHomeUserPhoto"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="default_description"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvDonorHomeUserTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvDonorHomeUserDesc"
        android:layout_alignBottom="@+id/ivDonorHomeUserPhoto"
        android:layout_marginBottom="5dp"
        android:text="Time"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvDonorHomeItemStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivDonorHomeUserPhoto"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:text="Status"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="15sp" />
    
</RelativeLayout>