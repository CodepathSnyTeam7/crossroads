<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    android:id="@+id/rlProfileHdr"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:id="@+id/rlProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/LightGray"
        android:alpha="10" >
         
     <LinearLayout 
       android:id="@+id/llProfileNames"
       android:layout_width="match_parent"
   	   android:layout_height="wrap_content"
   	   android:orientation="horizontal" >
         
        <TextView
            android:id="@+id/tvProfileFirstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
	        android:layout_marginLeft="2dp"
            android:hint="first name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvProfileLastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="family name"
            android:textSize="16sp"
	        android:layout_marginLeft="2dp"
	        android:layout_marginRight="2dp"
            android:textColor="@color/black" />
     </LinearLayout>
        
     <LinearLayout 
       android:id="@+id/llProfileUsername"
       android:layout_width="match_parent"
   	   android:layout_height="wrap_content"
   	   android:orientation="horizontal" 
   	   android:layout_below="@+id/llProfileNames" >
        
        <TextView
            android:id="@+id/tvProfileUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_weight="1"
            android:hint="username"
            android:textSize="16sp"
            android:textColor="@color/black" />
        
        <TextView
            android:id="@+id/etProfileDistrict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_weight="1"
            android:hint="district"
            android:textSize="16sp"
            android:textColor="@color/black" />
     </LinearLayout>
     
     <LinearLayout 
       android:id="@+id/llProfilePhoneEmail"
       android:layout_width="match_parent"
   	   android:layout_height="wrap_content"
   	   android:orientation="horizontal" 
   	   android:layout_below="@+id/llProfileUsername" >
        <TextView
            android:id="@+id/etProfilePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_weight="1"
            android:hint="Phone 408-111-2222"
            android:textSize="16sp"
	        android:layout_marginLeft="2dp"
            android:textColor="@color/black" />
        
        <TextView
            android:id="@+id/etProfileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_weight="1"
            android:hint="email"
            android:textSize="16sp"
	        android:layout_marginLeft="2dp"
	        android:layout_marginRight="2dp"
            android:textColor="@color/black" />
      </LinearLayout>

    </RelativeLayout>    

</RelativeLayout>
